pipeline {
    agent java
    stages {
        stage('GIT Checkout') {
            steps{
                  git 'https://github.com/Bhavya-Katikuti/java_repo1.git'
			}
        }

        stage('Build') {
            steps {
                    sh 'mvn clean install' 
            }
        }

        stage('Deploy') {
            steps {
				sh ''sudo cp /home/ubuntu/jenkins/workspace/pipelineproject/target/*.war /home/ubuntu/.ssh/opt/apache-tomcat-9.0.55/webapps

            }
        }

    }
}
